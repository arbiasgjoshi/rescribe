{
	"name": "@rescribe/core",
	"version": "0.1.0",
	"files": [
		"dist"
	],
	"main": "dist/rescribe-core.cjs.js",
	"module": "dist/rescribe-core.esm.js",
	"exports": {
		".": {
			"module": "./dist/rescribe-core.esm.js",
			"default": "./dist/rescribe-core.cjs.js"
		},
		"./package.json": "./package.json",
		"./rescribe.css": "./styles/rescribe.css"
	},
	"types": "./dist/index.d.ts",
	"style": "./styles/rescribe.css",
	"scripts": {
		"dev": "tailwindcss -w -i ./src/styles/main.css -o ./styles/rescribe.css",
		"build": "pnpm run build:css && pnpm build:lib",
		"build:css": "tailwindcss -m -i ./src/styles/main.css -o ./styles/rescribe.css",
		"build:lib": "tsup",
		"setup": "pnpm run build:css"
	},
	"devDependencies": {
		"@remix-run/node": "1.18.0",
		"@remix-run/react": "1.18.0",
		"@rescribe/eslint-config": "workspace:*",
		"@rescribe/tsconfig": "workspace:*",
		"@types/node": "^20.5.1",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"autoprefixer": "^10.4.13",
		"concurrently": "^7.6.0",
		"postcss": "^8.4.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.2.7",
		"tsup": "^6.6.3",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"@remix-run/node": "1.18.0",
		"@remix-run/react": "1.18.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"dependencies": {
		"@i4o/catalystui": "1.0.0-alpha.14",
		"fast-glob": "^3.3.1",
		"zod": "^3.22.2"
	},
	"preconstruct": {
		"entrypoints": [
			"index.tsx"
		],
		"exports": {
			"extra": {
				"./rescribe.css": "./styles/rescribe.css"
			}
		}
	},
	"keywords": [],
	"author": "",
	"license": "ISC"
}
